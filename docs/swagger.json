    },
    "/contracts/{contract_id}/renew": {
      "post": {
        "tags": [
          "Contracts"
        ],
        "summary": "Renew a contract",
        "description": "Renew a contract",
        "parameters": [
          {
            "name": "contract_id",
            "in": "path",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "contract id (uuid)"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "price": {
                    "type": "number"
                  },
                  "start_date": {
                    "type": "Date"
                  },
                  "end_date": {
                    "type": "Date"
                  }
                },
                "required": [
                  "price",
                  "start_date",
                  "end_date"
                ],
                "example": {
                  "start_date": "2023-02-19T17:11:25.441Z",
                  "end_date": "2024-02-19T17:11:25.441Z",
                  "price": 1500
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "successfully renewed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContractRenewHistory"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "400": {
            "description": "Fields validation failed or contract does not exists"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
