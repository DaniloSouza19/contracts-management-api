    "/contracts/{contract_id}/payments": {
      "post": {
        "tags": [
          "Contracts"
        ],
        "summary": "Create a new Payment of property",
        "description": "Create a new Payment",
        "parameters": [
          {
            "name": "contract_id",
            "in": "path",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "contract id (uuid)"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Payment"
              }
            }
          },
          "required": true
